{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["dom", "dom.iterable", "esnext"],
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "jsx": "preserve",
        "allowJs": true,
        "maxNodeModuleJsDepth": 6
    },
    "exclude": ["node_modules", "dist"]
}
